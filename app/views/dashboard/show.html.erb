<table class='table dashboard'>
  <thead>
    <tr>
      <th></th>
      <% @pretenders.each do |pretender| %>
        <th><%= pretender.name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @pretenders.each_with_index do |row_owner| %>
      <tr>
        <th><%= row_owner.name %></th>
        <% @pretenders.each do |pretender| %>
          <% if pretender == row_owner %>
            <td class='disabled'>-</td>
          <% else %>
            <% ago = pretender.iterations_ago_with(row_owner) || 'never' %>
            <td>
              <span class="ago ago_<%= ago %>">
                <%= link_to ago, couples_path(couple: {pretender_a_id: row_owner.id, pretender_b_id: pretender.id}), method: :post %>
              </span>
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>